#
# Enable the kernel DTrace hooks which are required to load the DTrace
# kernel modules.
#
options 	KDTRACE_HOOKS

# DTrace core
# NOTE: introduces CDDL-licensed components into the kernel
#device		dtrace

# DTrace modules
#device		dtrace_profile
#device		dtrace_sdt
