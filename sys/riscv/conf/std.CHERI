makeoptions	CPUTYPE=cheri
options 	CPU_CHERI
options 	COMPAT_FREEBSD64

# DTrace doesn't work with CHERI yet
nooptions 	KDTRACE_HOOKS		# Kernel DTrace hooks

# This is the caprevoke branch; default to enabling the feature
options		CHERI_CAPREVOKE
options		CHERI_CAPREVOKE_STATS
options		CHERI_CAPREVOKE_FAST_COPYIN
options		CHERI_CAPREVOKE_CLOADTAGS
nooptions	CHERI_CAPREVOKE_CLEARTAGS # default to tag-preserving revocation
